<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <VersionPrefix>1.1.0</VersionPrefix>
    <!--<AspNetCoreHostingModel>OutOfProcess</AspNetCoreHostingModel>-->
    <LangVersion>Latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>KdSoft.EtwEvents.AgentManager</AssemblyName>
    <RootNamespace>KdSoft.EtwEvents.AgentManager</RootNamespace>
    <UserSecretsId>aca35d68-2f97-4471-bcee-88a607e466f3</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore.Server" Version="2.41.0" />
    <PackageReference Include="Grpc.Tools" Version="2.42.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="KdSoft.Utils.Portable" Version="3.6.3" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Certificate" Version="6.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="6.0.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="6.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="6.0.0" />
    <PackageReference Include="OrchardCore.Localization.Core" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <FontAwsomeSprites Include="Spa/css/fontawesome/sprites/**/*" />
    <FontAwsomeSvgs Include="Spa/css/fontawesome/svgs/**/*" />
    <FontAwsomeWebfonts Include="Spa/css/fontawesome/webfonts/**/*" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Spa/css/fontawesome/metadata/**/*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\EtwEvents.WebClient\InfraStructure\AggregatingNotifier.cs" Link="InfraStructure\AggregatingNotifier.cs" />
    <Compile Include="..\EtwEvents.WebClient\InfraStructure\LocalizationFileProvider.cs" Link="InfraStructure\LocalizationFileProvider.cs" />
    <Compile Include="..\EtwEvents.WebClient\InfraStructure\ManualResetValueTaskSource.cs" Link="InfraStructure\ManualResetValueTaskSource.cs" />
    <Compile Include="..\EtwEvents.WebClient\InfraStructure\PendingAsyncEnumerator.cs" Link="InfraStructure\PendingAsyncEnumerator.cs" />
    <Compile Include="..\EtwEvents.WebClient\InfraStructure\TimeSpanISO8601JsonConverter.cs" Link="InfraStructure\TimeSpanISO8601JsonConverter.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EtwEvents.Client.Shared\EtwEvents.Client.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\Protos\etwSink.proto" GrpcServices="Server">
      <Link>etwSink.proto</Link>
    </Protobuf>
  </ItemGroup>


  <Target Name="PostCSS" BeforeTargets="Build">
    <Copy SourceFiles="@(FontAwsomeSprites)" SkipUnchangedFiles="true" DestinationFiles="@(FontAwsomeSprites->'wwwroot/css/fontawesome/sprites/%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SourceFiles="@(FontAwsomeSvgs)" SkipUnchangedFiles="true" DestinationFiles="@(FontAwsomeSvgs->'wwwroot/css/fontawesome/svgs/%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SourceFiles="@(FontAwsomeWebfonts)" SkipUnchangedFiles="true" DestinationFiles="@(FontAwsomeWebfonts->'wwwroot/css/fontawesome/webfonts/%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>

  <Target Name="CopyEventSinks" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <BinFiles Include="$(SolutionDir)EventSinks/Deploy/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BinFiles)" DestinationFiles="@(BinFiles->'$(ProjectDir)EventSinks/%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
  </Target>
</Project>
