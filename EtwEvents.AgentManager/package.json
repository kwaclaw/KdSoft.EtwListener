{
    "name": "etw-events-agentmanager",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "postcss-src": "postcss src/css/**/*[.pcss,.css] --dir _tmp --ext css",
        "lint": "eslint",
        "po2json": "po2json wwwroot/de_AT.po wwwroot/de_AT.json -p",
        "wrap-css": "node node_modules/@kdsoft/lit-mvvm-components/scripts/wrap-css.mjs _tmp/**/*.css wwwroot/styles _tmp",
        "wrap-dialog-css": "node node_modules/@kdsoft/lit-mvvm-components/scripts/wrap-css.mjs node_modules/dialog-polyfill/dialog-polyfill.css wwwroot/styles node_modules/dialog-polyfill",
        "prebuild": "rimraf _tmp/**/*",
        "build": "npm run && npm run postcss-src && npm run po2json && npm run wrap-css && npm run wrap-dialog-css",
        "start": "snowpack build --watch"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.3",
        "@kdsoft/lit-mvvm": "file:D:/Work/Private/KdSoft.lit-mvvm",
        "@kdsoft/lit-mvvm-components": "file:D:/Work/Private/KdSoft.lit-mvvm/components",
        "@lit/reactive-element": "^1.0.0-rc.1",
        "@nx-js/observer-util": "^4.2.2",
        "@nx-js/queue-util": "^1.1.1",
        "autoprefixer": "^10.2.5",
        "dialog-polyfill": "^0.5.6",
        "gettext.js": "^1.0.0",
        "lit": "^2.0.0-rc.1"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.2.1",
        "eslint": "^7.22.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "postcss": "^8.2.10",
        "postcss-cli": "^8.3.1",
        "postcss-copy": "^7.1.0",
        "postcss-import": "^14.0.0",
        "postcss-modules": "^4.0.0",
        "snowpack": "^3.3.5",
        "tailwindcss": "^2.1.1"
    },
    "snowpack": {
        "root": "src",
        "workspaceRoot": "../..",
        "exclude": [
            "src/css/**/*",
            "wwwroot/**/*"
        ],
        "buildOptions": {
            "out": "wwwroot"
        },
        "packageOptions": {
            "knownEntrypoints": [
                "@fortawesome/fontawesome-free",
                "@kdsoft/lit-mvvm",
                "@kdsoft/lit-mvvm-components",
                "@nx-js/observer-util/dist/es.es6.js",
                "@nx-js/queue-util/dist/es.es6.js",
                "@lit/reactive-element/css-tag.js",
                "lit/directives/repeat.js",
                "lit/directives/class-map.js",
                "lit/html.js",
                "gettext.js",
                "dialog-polyfill",
                "dialog-polyfill/dialog-polyfill.css"
            ]
        }
    },
    "postcss": {
        "plugins": {
            "postcss-import": {},
            "postcss-copy": {
                "basePath": [
                    "node_modules"
                ],
                "template": "[path]/[name].[ext][query]",
                "dest": "src/styles/assets"
            },
            "tailwindcss": {
                "theme": {},
                "variants": {},
                "plugins": [
                    "@tailwindcss/forms"
                ]
            },
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "last 2 chrome versions",
        "last 2 firefox versions",
        "last 2 safari versions"
    ]
}
