{
  "name": "etw-events-agentmanager",
  "version": "1.0.0",
  "description": "Connection security and authentication/authorization are both performed using certificates.",
  "scripts": {
    "lint": "eslint",
    "wrap-css": "node node_modules/@kdsoft/lit-mvvm-components/scripts/wrap-css.mjs",
    "postcss-src": "postcss src/css/**/*[.pcss,.css] --dir _tmp --ext css",
    "po2json": "po2json-gettextjs src/de_AT.po src/de_AT.json -p",
    "wrap-css-tmp": "npm run wrap-css _tmp/**/*.css src/styles _tmp",
    "wrap-css-dialog": "npm run wrap-css node_modules/dialog-polyfill/dialog-polyfill.css src/styles node_modules/dialog-polyfill",
    "import-styles": "shx rm -f _tmp/**/* && npm run postcss-src && npm run wrap-css-tmp && npm run wrap-css-dialog",
    "prebuild": "npm run po2json",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "dependencies": {
    "@kdsoft/lit-mvvm": "^2.0.0-beta.1",
    "@kdsoft/lit-mvvm-components": "^1.0.0-beta.4",
    "dialog-polyfill": "^0.5.6",
    "gettext.js": "^1.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "postcss": "^8.2.12",
    "postcss-cli": "^8.3.1",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^14.0.1",
    "shx": "^0.3.3",
    "tailwindcss": "^2.1.2",
    "vite": "^2.2.3"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-copy": {
        "basePath": [
          "node_modules"
        ],
        "template": "[path]/[name].[ext][query]",
        "dest": "src/styles/assets"
      },
      "tailwindcss": {
        "theme": {},
        "variants": {},
        "plugins": [
          "@tailwindcss/forms"
        ]
      },
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ]
}
