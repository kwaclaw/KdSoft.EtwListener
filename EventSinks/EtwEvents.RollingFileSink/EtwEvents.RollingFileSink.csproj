<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>Latest</LangVersion>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <RootNamespace>KdSoft.EtwEvents.EventSinks</RootNamespace>
    <AssemblyName>KdSoft.EtwEvents.RollingFileSink</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="config\rolling-file-sink-config-model.js">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="config\rolling-file-sink-config.js">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="KdSoft.Utils" Version="2.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\EtwEvents.Client.Shared\EtwEvents.Client.Shared.csproj" />
  </ItemGroup>

  <Target Name="CopyToDeploy" AfterTargets="PostBuildEvent">
    <PropertyGroup>
      <DeployDirectory>$(SolutionDir)/EventSinks/Deploy/RollingFileSink</DeployDirectory>
    </PropertyGroup>
    <ItemGroup>
      <BinFiles Include="$(TargetDir)**/*.*" />
      <JsFiles Include="$(ProjectDir)config/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BinFiles)"
          DestinationFiles="@(BinFiles->'$(DeployDirectory)/%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(JsFiles)"
          DestinationFiles="@(JsFiles->'$(DeployDirectory)/config/%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
